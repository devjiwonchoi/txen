{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "incremental": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
    "target": "esnext",
    "module": "preserve",
    "jsx": "preserve",
    "lib": [
      "esnext"
    ],
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}